@page "/"
@using Car_Rental.Business.Classes;
@using Car_Rental.Common.Classes;
@using Car_Rental.Common.Interfaces;
@using Car_Rental.Common.Enums;
@inject BookingProcessor bp

<PageTitle>Car Rental Assignment</PageTitle>

<h1>Car Rental Assignment</h1>

<div class="row">

    <h4 class="fw-bold" style="padding: 0;">Customers</h4>
    <table class="table table-hover border">
        <thead>
            <tr class="table-dark">
                <th>SSN</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
             
            <tr>
                <td><input type="text" placeholder="SSN" /></td>
                <td><input type="text" placeholder="Last Name" /></td>
                <td><input type="text" placeholder="First Name" /><button class="btn btm-sm btn-outline-success">Add</button></td>
            </tr>
            <!-- 
            <tr>
                <td><input type="text" placeholder="SSN" value="@customer.SocialSecurityNumber" /></td>
                <td><input type="text" placeholder="Last Name" value="@customer.LastName" /></td>
                <td>
                    <input type="text" placeholder="First Name" value="@customer.FirstName" />
                    <form @onsubmit="@(e => { bp.AddCustomer(customer.SocialSecurityNumber, customer.LastName, customer.FirstName); return false; })">
                        <button type="submit" class="btn btm-sm btn-outline-success">Add</button>
                    </form>
                </td>
            </tr>-->

            @foreach(var c in bp.GetCustomers())
            {
                <tr>
                    <th>@c.SocialSecurityNumber</th>
                    <td>@c.LastName</td>
                    <td>@c.FirstName</td>
                </tr>  
            }
        </tbody>
    </table>
</div>
<br />
<div class="row">
    <h4 class="fw-bold" style="padding: 0;">Vehicles</h4>
    <table class="table table-hover border">
        <thead>
            <tr class="table-dark">
                <th>RegNo</th>
                <th>Make</th>
                <th>Odometer</th>
                <th>Cost Km</th>
                <th>Vehicle Type</th>
                <th>$ Day</th>
                <th>Action</th>
                <th></th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td><input type="text" placeholder="RegNo" /></td>
                <td><input type="text" placeholder="Make" /></td>
                <td><input type="number" placeholder="0" /></td>
                <td><input type="number" placeholder="0" /></td>
                <td>
                    <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                        <option selected value="1">@VehicleTypes.Convertible</option>
                        <option value="2">@VehicleTypes.Bus</option>
                        <option value="3">@VehicleTypes.Minivan</option>
                        <option value="4">@VehicleTypes.Motorcycle</option>
                    </select>
                </td>
                <td></td>
                <td><button>Add</button></td>
                <td></td>
                <td></td>
            </tr>

            @foreach(var v in bp.GetVehicles())
            {
                <tr>
                    <th>@v.RegNo</th>
                    <td>@v.CarMake</td>
                    <td>@v.OdoMeter</td>
                    <td>@v.CostKm</td>
                    <td>@v.VType</td>
                    <td>@v.CostDay</td>
                    <td>
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example">
                            <option selected>Select Customer</option>
                                @foreach (var customer in bp.GetCustomers())
                                {
                                <option value="@customer.Id">@customer.FirstName @customer.LastName</option>
                                }
                        </select>
                    </td>
                    <td><button>Rent</button></td>
                    @if(v.VStatus == VehicleStatuses.Available)
                    {
                        <td><span class="badge bg-dark rounded-pill">@v.VStatus</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-danger rounded-pill">@v.VStatus</span></td>
                    }
                    <!-- <td><span class="badge bg-warning rounded-pill">Processing</span></td> -->
                </tr> 
            }
        </tbody>
    </table>
</div>
<br />
<div class="row">
    <h4 class="fw-bold" style="padding: 0;">Bookings</h4>
    <table class="table table-hover border">
        <thead>
            <tr class="table-dark">
                <th>RegNo</th>
                <th>Customer</th>
                <th>Km Rented</th>
                <th>Km Returned</th>
                <th>Rented</th>
                <th>Returned</th>
                <th>Cost</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var b in bp.GetBookings())
            {
                <tr>
                    <th>@b.RegNo</th>
                    <td>@b.Customer</td>
                    <td>@b.KmRent</td>
                    <td>@b.KmReturned</td>
                    <td>@(b.StartRent?.ToShortDateString())</td>
                    <td>@(b.EndRent?.ToShortDateString())</td>
                    
                    @foreach(var v in bp.GetVehicles())
                    {
                        @if (v.RegNo == b.RegNo)
                        {
                            <td>@b.GetCost(v)</td>
                        }
                    }
                    @if (b.Status == VehicleStatuses.Available) 
                    {
                        <td><span class="badge bg-success rounded-pill">@b.Status</span></td>
                    }
                    else
                    {
                        <td><span class="badge bg-danger rounded-pill">@b.Status</span></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>



